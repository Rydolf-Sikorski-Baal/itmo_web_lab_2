<web-app>
    <filter>
        <filter-name>mainFilter</filter-name>
        <filter-class>org.ait.MainFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>mainFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <servlet>
        <servlet-name>controller</servlet-name>
        <servlet-class>org.ait.ControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>areaChecker</servlet-name>
        <servlet-class>org.ait.AreaCheckServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>controller</servlet-name>
        <url-pattern>/control</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>areaChecker</servlet-name>
        <url-pattern>/area</url-pattern>
    </servlet-mapping>
</web-app>

